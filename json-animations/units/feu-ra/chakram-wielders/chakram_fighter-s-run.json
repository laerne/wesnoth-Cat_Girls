{
    "$wml_root_path" : ":/images/units/feu-ra/chakram-wielders",
    "$gif_root_path" : ":/images-recolored/units/{color/}feu-ra/chakram-wielders",

    "$animations_to_export" : ["s-run"],

    "$default_frame" : { "$duration" : 200 },

    "s-run" : {
        "$gif_output_path" : ":/images-animated/units/{color/}feu-ra/chakram-wielders/chakram-fighter{-$name}{-color}.gif",
        "$wml_output_path" : ":/animations/units/feu-ra/chakram-wielders/chakram-fighter{-$name}.wml",
        "$frames" : [
            { "$input_path" : "chakram-fighter-s-run-0{-color}.png" },
            { "$input_path" : "chakram-fighter-s-run-1{-color}.png" },
            { "$input_path" : "chakram-fighter-s-run-2{-color}.png" },
            { "$input_path" : "chakram-fighter-s-run-3{-color}.png" },
            { "$input_path" : "chakram-fighter-s-run-4{-color}.png" },
            { "$input_path" : "chakram-fighter-s-run-5{-color}.png" }
        ]
    },

    "$path_variables" : { "color" : "" },

    "$gif_path_variable_variations" : { "#include" : ":/json-includes/color-pairs.json" }
}
